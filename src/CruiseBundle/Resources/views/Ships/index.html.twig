{% extends 'base.html.twig' %}


{% block body %}

{% for ship in ships %}
<div class="col-sm-6 clearfix" style="margin-bottom:10px;">
	<p style="font-size:16px; text-align:center;">
		<a href="{{path('page',{'url':'ships/'~ship.code})}}">{{ship.name}}</a><br>
	</p>
	
	<div style="float:left; padding-right:10px;     width: 100%; ">
		<a href="{{path('page',{'url':'ships/'~ship.code})}}">
			<img src="{{ ('/files/ship/'~ship.code~'/'~ship.code~'-main.jpg') | imagine_filter('ship') }}" alt="">
		</a>
	</div>

	
</div>	

{% endfor %}

{% endblock %}

